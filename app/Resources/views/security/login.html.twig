{% extends "securityBase.html.twig" %}

{% block title %}
    <title>JIRAstic Login</title>
{% endblock %}

{% block content %}
<div class="container custom-row">
    <div class="jumbotron">
        <h1>{% trans %}JIRAstic login{% endtrans %}</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% if error %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert"><i class="fa fa-times"></i></button>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form role="form" action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <label for="username" class="col-md-2 control-label">{% trans %}Username{% endtrans %}:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="username" id="username" name="_username" value="{{ last_username }}"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="pwd">{% trans %}Password{% endtrans %}:</label>
                    <div class="col-md-10">
                        <input class="form-control" type="password" id="password" name="_password"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-default">{% trans %}Login{% endtrans %}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
