{% extends "securityBase.html.twig" %}

{% block content %}
    <h1><i class="fa fa-cogs" aria-hidden="true"></i> {% trans %}Define states for a board{% endtrans %}</h1>
    </br>
    <div class="panel panel-primary filterable">
        <div class="panel-heading">
            <h3 class="panel-title">Boards</h3>
        </div>
        <div class="input-group">
        <span class="input-group-addon">
            <i class="fa fa-filter"></i>
            {% trans %}Filter{% endtrans %}
        </span>
            <input id="filter" type="text" class="form-control" placeholder="{% trans %}Type here...{% endtrans %}">
        </div>
        <table class="table table-hover table-striped">
            </thead>
            <tbody class="searchable">
            {% for board in boards %}
                <tr>
                    <td><a href="{{ path('admin_board_edit', { 'id': board.id }) }}">{{ board.name }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
